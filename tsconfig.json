		"module": "ESNext",
		"declaration": true,
		"outDir": "./dist",
		"strict": true,
		"allowSyntheticDefaultImports": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"allowJs": true,
		"sourceMap": false
	},
	"include": ["src/**/*"]
}
